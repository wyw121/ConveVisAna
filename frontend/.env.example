# 前端环境变量配置示例
# 复制此文件为 .env.local 并填入实际值

# ============ 后端 API 配置 ============
# 后端 API 基础地址
NEXT_PUBLIC_BACKEND_BASE_URL=http://localhost:8000

# ============ 功能开关 ============
# 启用深度分析功能
NEXT_PUBLIC_ENABLE_DEEP_ANALYSIS=true

# ============ 分析配置 ============
# 最大评估问答对数
NEXT_PUBLIC_MAX_EVAL_PAIRS=10

# 请求超时时间（毫秒）
NEXT_PUBLIC_REQUEST_TIMEOUT=300000

# ============ 可选配置 ============
# 启用调试日志
NEXT_PUBLIC_DEBUG=false

# 后端健康检查间隔（毫秒，0 表示不定期检查）
NEXT_PUBLIC_HEALTH_CHECK_INTERVAL=0
